#!/bin/bash
# zenburn theme

THEME_NAME=zenburn

GTK_FONT="Terminus 8"

# vim theme name
VIM_COLORS=zenburn

# termite theme name
TERMITE_CONFIG=zenburn

# Background command
export BG_COMMAND="feh --bg-fill $HOME/images/walls/fill/tree.jpg"

. ~/.config/bspwm/themes/base.bspwm_theme $TERMITE_CONFIG

# BSPWM variables
# naming convention is b_<config_option>
b_border_width=3
b_window_gap=12
b_split_ratio=0.6

# Panel variables
export PANEL_HEIGHT=28
export PANEL_FONT_MAIN="Terminus-8"
export PANEL_FONT_ICON="FontAwesome-8"
export PANEL_GAP=2
# sneak an extra launch parameter onto lemonbar to show no shadows.
PANEL_UNDERLINE="4 -n zenburn"
pBG="#003f3f3f"
pBGInactiveTab="#ff3f3f3f"
pBGActiveTab="$pFG"
pFGActiveTab="$pBG"
pPadding=2
GTK_ICON_COLOR="$(colort -1 "$pBG")"

export pRest="$pIcon"
export desktopDisplay=name # [icon|name] - display desktop names or DO/DF variables.
export showFreeDesktops=true # option to show nothing for free desktops
export desktopDisplayType=together # [together| separate] - show desktops in separate blocks or together in one block
export NoModeToggle="" # if defined, no monocle/tiling toggle.

# Workspace variables
export DO='+'
export DF='-'
export DT='[-]'
export DM='[]'

# dunst variables
DUNST_FONT="Terminus 8"

# This is needed for spacing on the dmenu_run script.
[ "$BSPWM_GAPS" = false ] && export PANEL_GAP=0
