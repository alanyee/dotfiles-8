#!/usr/bin/env bash
# print dmenu dimensions for current monitor, and set prompt.
# colors are set by Xresources.

width=300
height=200
lines=15

mon="$(bspc query -M -m)"
dim() {
     bspc query -T -m $mon | jq .rectangle.$1
}

x="$(( ($(dim width) - width) / 2 ))"
y="$(( ($(dim height) - height) / 2))"
 
# TODO: consider templating this for prompt char and/or dimensions.
echo "-y $y -x $x -h $height -w $width -l $lines -i -q -p \"YEAH:\""
