#!/usr/bin/env bash
# base16 ocean theme

set -a

# theme
THEME_NAME=ocean
VIM_COLORS=chameleon
BG_COMMAND="feh --bg-fill $HOME/.wm/walls/ocean.jpg"
. $HOME/.wm/themes/base.bspwm_theme $THEME_NAME


# bspwm
b_border_width=6
b_window_gap=16

# panel
p_height=32
p_gap=0
p_underline=0
p_font_main="Droid Sans-10"
p_font_icon="FontAwesome-10"
p_desktop_display_name=name
p_desktop_show_free=false
p_desktop_only_active=true
p_title_only_show_active=false
p_bg_inactive=$p_bg_normal

p_format="dropdown:themeSwitch:desktop:title|mpd|volume:updates:weather:clock"

#stepSetup() {}

bg() {
    #gradientGet
    step=$((step+3))
    eval "echo \#\${color$step}"
}

activebg() {
    colort 20 "$(bg)"
}

export -f bg
export -f activebg
