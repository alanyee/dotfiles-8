#!/usr/bin/env dash
# named for the ricer in #rice.

# theme
THEME_NAME=lynn
VIM_COLORS=term
BG_COMMAND="feh --bg-fill $HOME/.wm/walls/fill/bamboo.jpg"

# bspwm
b_border_width=4
b_window_gap=16
p_padding=10

# panel
p_height=32
p_gap=4
p_font_main="Droid Sans-8:style=bold"

p_desktop_occupied_label=$(env printf '\uf18c')
p_desktop_empty_label=$(env printf '\uf068')
p_desktop_display_format=together

# colors
p_bg_inactive="#ff392925"
p_fg_active="$p_bg_inactive"

# other
d_font="Droid Sans 10"
GTK_FONT="Droid Sans 10"
st_borderpx=20
